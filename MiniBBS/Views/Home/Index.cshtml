@model MiniBBS.Models.IndexViewModel
@using MiniBBS.Models
@{
    ViewData["Title"] = "MiniBBS";
}

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        header {
            border-bottom: 3px solid white;
        }

        .navbar {
            border-radius: 5px;
        }

        table {
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
        }

        th, td {
            vertical-align: middle;
        }

        th {
            background-color: #f8f9fa;
        }

        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .table {
            background-color: white;
            border-radius: 5px;
        }

            .table thead tr th {
                border-top: none;
            }

            .table tbody tr:hover {
                background-color: #f8f9fa;
            }

        footer {
            border-top: 2px solid white;
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header class="bg-primary text-white text-center py-3 mb-4">
        <h1>MiniBBS</h1>
    </header>


    <div class="container">
        <h2>@Model.SelectedForum.ForumName</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Posted Time</th>
                    <th>Username</th>
                    <th>Comment Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td><a href="@Url.Action("Details", "Post", new { postId = post.PostID })">@post.Title</a></td>
                        <td>@post.PostedTime</td>
                        <td>@post.Username</td>
                        <td>@post.CommentCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2023 MiniBBS. All rights reserved.</p>
    </footer>
</body>
</html>
