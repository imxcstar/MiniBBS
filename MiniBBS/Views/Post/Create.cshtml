@model CreatePostViewModel
@{
    ViewData["Title"] = "发表新帖子";
}

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        header {
            border-bottom: 3px solid white;
        }

        .navbar {
            border-radius: 5px;
        }

        table {
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
        }

        th, td {
            vertical-align: middle;
        }

        th {
            background-color: #f8f9fa;
        }

        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .table {
            background-color: white;
            border-radius: 5px;
        }

            .table thead tr th {
                border-top: none;
            }

            .table tbody tr:hover {
                background-color: #f8f9fa;
            }

        footer {
            border-top: 2px solid white;
        }
    </style>
    <title>@ViewData["Title"] - MiniBBS</title>
</head>
<body>
    <header class="bg-primary text-white text-center py-3 mb-4">
        <h1>MiniBBS</h1>
    </header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
        <div class="container">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/">首页</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <h3>@Model.ForumName</h3>

        <form asp-action="Create" asp-controller="Post" method="post">
            <input type="hidden" asp-for="ForumId" />
            <input type="hidden" asp-for="ForumName" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">发表帖子</button>
        </form>
    </div>
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2023 MiniBBS. All rights reserved.</p>
    </footer>
</body>
</html>
